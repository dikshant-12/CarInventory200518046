<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"
        android:maxSdkVersion="32" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CarInventory"
        tools:targetApi="31">
        <activity
            android:name=".activities.CompanyDetailsA"
            android:exported="true"/>
        <activity
            android:name=".activities.EditCompanyA"
            android:exported="true" />
        <activity
            android:name=".activities.EditCarA"
            android:exported="false" />
        <activity
            android:name=".activities.CarDetailsA"
            android:exported="true" />
        <activity
            android:name=".activities.AddCompanyA"
            android:exported="false" />
        <activity
            android:name=".activities.AddCarA"
            android:exported="true" />
        <activity
            android:name=".SplashA"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainActivity"
            android:exported="true" />
    </application>

</manifest>